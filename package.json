{
  "name": "danaverse-crowdfunding",
  "version": "0.1.0",
  "description": "DanaVerse - Decentralized Crowdfunding Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "reset": "./scripts/reset.sh",
    "reset:all": "./scripts/reset.sh all",
    "reset:global": "./scripts/reset.sh global",
    "reset:mobile": "./scripts/reset.sh mobile",
    "reset:web": "./scripts/reset.sh web",
    "reset:api": "./scripts/reset.sh api",
    "reset:contracts": "./scripts/reset.sh contracts",
    "dev:terminals": "./scripts/dev-terminals.sh",
    "dev:all": "./scripts/dev-terminals.sh all",
    "dev:web": "./scripts/dev-terminals.sh web",
    "dev:mobile": "./scripts/dev-terminals.sh mobile",
    "dev:android": "./scripts/dev-terminals.sh android",
    "dev:ios": "./scripts/dev-terminals.sh ios",
    "dev:api": "./scripts/dev-terminals.sh api",
    "dev:contracts": "./scripts/dev-terminals.sh contracts",
    "husky:setup": "./scripts/setup-husky.sh install",
    "husky:test": "./scripts/setup-husky.sh test",
    "husky:status": "./scripts/setup-husky.sh status",
    "husky:coverage": "./scripts/setup-husky.sh coverage",
    "linters:install": "./scripts/install-linters.sh all",
    "linters:install:go": "./scripts/install-linters.sh go",
    "linters:install:solidity": "./scripts/install-linters.sh solidity",
    "linters:install:shell": "./scripts/install-linters.sh shell",
    "linters:install:terraform": "./scripts/install-linters.sh terraform",
    "linters:check": "./scripts/install-linters.sh check",
    "linters:examples": "./scripts/install-linters.sh examples"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.go": [
      "gofmt -w",
      "goimports -w"
    ],
    "*.sol": [
      "prettier --write",
      "solhint --fix"
    ],
    "*.sh": [
      "shfmt -w",
      "shellcheck"
    ],
    "*.tf": [
      "terraform fmt -recursive",
      "tflint"
    ]
  }
}
